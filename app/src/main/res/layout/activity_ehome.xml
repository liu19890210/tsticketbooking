            <!--android:layout_below="@+id/iv_guomin"-->
            <!--android:layout_marginBottom="@dimen/dp_10"-->
            <!--/>-->
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_guomin"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_size_small"
            android:textColor="@android:color/white"
            android:text="@string/str_guomin_Tickets"/>
        <RelativeLayout
            android:id="@+id/rl_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginTop="@dimen/dp_80"
            android:visibility="gone">
            <ImageView
                android:id="@+id/ic_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_22"
                android:src="@mipmap/ic_notice"/>
            <guominchuxing.tsbooking.view.AutoScrollTextView
                android:id="@+id/tv_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ic_notice"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>


    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18"
        android:layout_below="@id/rl_top"
        />
    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_inputNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_style">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/input_number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image1"
                android:textColor="@color/color_font_333333"
                android:text="@string/str_input_number"
                />

        </RelativeLayout>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_dbdbdb"/>
        <RelativeLayout
            android:id="@+id/rl_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_style">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/scan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image2"
                android:textColor="@color/color_font_333333"
                android:text="@string/str_scan_tickets"
                />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18"
        android:layout_below="@id/ll_center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/view2"
        android:background="@android:color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_style">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/history"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image3"
                android:textColor="@color/color_font_333333"
                android:text="@string/str_history_tickets"
                />

        </RelativeLayout>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_dbdbdb"/>
        <!--<RelativeLayout-->
            <!--android:id="@+id/rl_tj_form"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/btn_click_style">-->

            <!--<ImageView-->
                <!--android:id="@+id/image4"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/dp_20"-->
                <!--android:layout_marginBottom="@dimen/dp_18"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:background="@mipmap/tj_form"/>-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
