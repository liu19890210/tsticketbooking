                <!--android:layout_below="@+id/image4"-->
                <!--android:textColor="@color/color_font_333333"-->
                <!--android:text="@string/str_tongji_form"-->
                <!--/>-->

        <!--</RelativeLayout>-->
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_dbdbdb"/>
        <RelativeLayout
        android:id="@+id/rl_vb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_click_style">

        <ImageView
        android:id="@+id/image4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/visitor_board"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image4"
        android:textColor="@color/color_font_333333"
        android:text="@string/str_visitor_board"
        />

        </RelativeLayout>
        <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:background="@color/color_dbdbdb"/>
        <RelativeLayout
            android:id="@+id/rl_hotel_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_style">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/hotel_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image5"
                android:textColor="@color/color_font_333333"
                android:text="@string/str_hotel_info"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/str"/>
</RelativeLayout>
