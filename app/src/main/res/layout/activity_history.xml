<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_hotel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_dbdbdb">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/include_item_title"/>
    </RelativeLayout>

 <RelativeLayout
     android:id="@+id/rl_center"
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_142"
     android:layout_below="@+id/rl_title"
     android:background="@color/color_2F98E9">
     <TextView
         android:id="@+id/tv_num"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="@dimen/dp_38"
         android:layout_marginBottom="@dimen/dp_10"
         android:textSize="@dimen/font_size_big"
         android:textColor="@android:color/white"
         android:text="0"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_below="@+id/tv_num"
         android:textSize="@dimen/font_size_middle"
         android:textColor="@android:color/white"
         android:text="@string/str_hisNum"/>
 </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_history_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/color_666666_font"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_history_main"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
