<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_hotel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:orientation="vertical"
    >
 <include layout="@layout/include_item_title"/>
 <View
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_30"/>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_194"
     android:background="@android:color/white">

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:imeOptions="actionDone"
      android:inputType="textMultiLine"
      android:layout_marginLeft="@dimen/dp_22"
      android:background="@null"
      android:hint="@string/str_feed"
      android:paddingTop="@dimen/dp_22"
      android:textColor="@color/color_666666_font"
      android:textColorHint="@color/color_666666_font"
      android:textSize="@dimen/font_size_small" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_marginRight="@dimen/dp_16"
      android:textColor="@color/color_666666_font"
      android:textSize="@dimen/font_size_small"
      android:text="0/150"/>
 </RelativeLayout>
 <View
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_16"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
 <EditText
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_70"
     android:inputType="phone"
     android:background="@null"
     android:layout_marginLeft="@dimen/dp_22"
     android:hint="@string/str_mobile"
     android:textColor="@color/color_666666_font"
     android:textColorHint="@color/color_666666_font"
     android:textSize="@dimen/font_size_small" />
</RelativeLayout>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_104"
      android:gravity="center"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/dp_22"
      android:layout_marginLeft="@dimen/dp_16"
      android:layout_marginRight="@dimen/dp_16"
      android:textSize="@dimen/font_size_small"
      android:textColor="@android:color/white"
      android:background="@drawable/btn_radius_bule"
      android:text="提交"/>
 </RelativeLayout>
</LinearLayout>
