<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_hotel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:orientation="vertical"
    >
 <include layout="@layout/include_item_title"/>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_30"/>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_104"
     android:orientation="horizontal"
     android:background="@drawable/btn_click_style">

  <guominchuxing.tsbooking.view.ClearEditText
      android:id="@+id/et_bindMobile"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/dp_22"
      android:layout_weight="4"
      android:background="@null"
      android:hint="@string/str_bind_mobile"
      android:inputType="phone"
      android:maxLength="11"
      android:paddingRight="@dimen/dp_22"
      android:textColor="@color/color_989898_font"
      android:textColorHint="@color/color_989898_font"
      android:textSize="@dimen/font_size_small" />

  <TextView
      android:id="@+id/btn_code"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="0.01"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/dp_22"
      android:layout_marginBottom="@dimen/dp_11"
      android:layout_marginTop="@dimen/dp_11"
      android:paddingLeft="@dimen/dp_25"
      android:paddingRight="@dimen/dp_25"
      android:gravity="center"
      android:background="@drawable/btn_radius_bule"
      android:textSize="@dimen/font_size_small"
      android:textColor="@android:color/white"
      android:text="获取验证码" />
 </LinearLayout>
 <View
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_1"
     />
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_104"
     android:background="@drawable/btn_click_style">

  <guominchuxing.tsbooking.view.ClearEditText
      android:id="@+id/et_code"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/dp_22"
      android:layout_toRightOf="@+id/image2"
      android:background="@null"
      android:hint="@string/str_code_"
      android:digits="1234567890"
      android:inputType="phone|number"
      android:paddingRight="@dimen/dp_22"
      android:textColor="@color/color_989898_font"
      android:textColorHint="@color/color_989898_font"
      android:textSize="@dimen/font_size_small"
      />
 </RelativeLayout>
 <View
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_46"/>
 <include layout="@layout/include_btn"/>
</LinearLayout>
